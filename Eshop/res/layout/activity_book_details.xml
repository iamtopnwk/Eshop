<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/loginbg" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:src="@drawable/eshopper" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="20dp"
        android:background="@drawable/loginbg" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/wishlistBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:contentDescription="@string/wish_list"
                android:onClick="addToWishlist"
                android:src="@drawable/icon_wishlist" />

            <TextView
                android:id="@+id/bookName1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/stmediumtext"
                android:fitsSystemWindows="true"
                android:singleLine="false"
                android:textColor="#040404"
                android:textSize="18sp"
                android:textStyle="normal"
                android:typeface="normal" />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@+id/bookName1"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/image_bdr"
                android:contentDescription="@string/app_name"
                android:padding="3dip"
                android:scaleType="matrix" />

            <LinearLayout
                android:id="@+id/thumbnail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="20dp" >

                <ImageView
                    android:id="@+id/logo1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/image_bdr"
                    android:contentDescription="@string/app_name"
                    android:padding="3dip" />

                <ImageView
                    android:id="@+id/logo2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/image_bdr"
                    android:contentDescription="@string/app_name"
                    android:padding="3dip" />

                <ImageView
                    android:id="@+id/logo3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/image_bdr"
                    android:contentDescription="@string/app_name"
                    android:padding="3dip" />

                <ImageView
                    android:id="@+id/logo4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/image_bdr"
                    android:contentDescription="@string/app_name"
                    android:padding="3dip" />
            </LinearLayout>

            <TextView
                android:id="@+id/authorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thumbnail"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:text="@string/stauthorname"
                android:textColor="#343434"
                android:textSize="15sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/pricestatic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/authorName"
                android:layout_marginLeft="25dp"
                android:text="@string/stprice"
                android:textColor="#FF0000"
                android:textSize="20sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/authorName"
                android:layout_toRightOf="@+id/pricestatic"
                android:textColor="#FF0000"
                android:textSize="20sp"
                android:textStyle="normal" />

            <RatingBar
                android:id="@+id/ratingBar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/pricestatic"
                android:layout_below="@+id/pricestatic"
                android:scaleX="0.6"
                android:scaleY="0.6" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/ratingBar1"
                android:orientation="vertical"
                android:paddingTop="10dp" >

                <Button
                    android:id="@+id/starheading"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ratingsreviews" />

                <TextView
                    android:id="@+id/star5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="@string/fivestar"
                  
                    android:textSize="20sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/star4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="@string/fourstar"
                    
                    android:textSize="20sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/star3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="@string/threestar"
                    
                    android:textSize="20sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/star2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="@string/twostar"
                    
                    android:textSize="20sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/star1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="@string/onestar"
                    
                    android:textSize="20sp"
                    android:textStyle="italic" />
<!--  
                <TextView
                    android:id="@+id/like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10sp"
                    android:text="@string/likes"
                    android:textColor="#669900"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10sp"
                    android:text="@string/comments"
                    android:textColor="#669900"
                    android:textSize="20sp" />
                    
                                                        -->
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>