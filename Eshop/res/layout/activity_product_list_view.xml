<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgnd1"
    tools:context="com.infotop.eshop.activities.ProductListViewActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/eshopper" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/listviewbtn1"
           android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_gravity="right"
            android:onClick="gridView"
            android:src="@drawable/ic_action_view_as_grid" />

        <ListView
            android:id="@+id/productListView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="#b5b5b5"
            android:dividerHeight="1dp"
            android:listSelector="@drawable/prolist_selector" >
        </ListView>
    </LinearLayout>

</RelativeLayout>