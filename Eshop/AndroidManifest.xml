<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.infotop.eshop"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".utilities.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.infotop.eshop.login.EshopLoginActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.infotop.eshop.main.SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.infotop.eshop.main.EshopMainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.infotop.eshop.login.RegisterActivity"
            android:label="@string/title_activity_register" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.infotop.eshop.login.EshopLoginActivity" />
        </activity>
        <activity
            android:name="com.infotop.eshop.product.BookDetailsActivity"
            android:label="@string/title_activity_product_details"
            android:uiOptions="splitActionBarWhenNarrow" >
        </activity>
        <activity
            android:name="com.infotop.eshop.cartlist.CartListMainActivity"
            android:label="@string/title_activity_cart_list_main"
            android:uiOptions="splitActionBarWhenNarrow" >
        </activity>
        <activity
            android:name="com.infotop.eshop.product.ProductListViewActivity"
            android:label="@string/title_activity_product_list_view" >
        </activity>
        <activity
            android:name="com.infotop.eshop.product.ProductGridViewActivity"
            android:label="@string/title_activity_product_grid_view" >
        </activity>
        <activity
            android:name="com.infotop.eshop.wishlist.WishListMainActivity"
            android:label="@string/title_activity_wish_list_main" >
        </activity>
        <activity
            android:name="com.infotop.eshop.payment.PaymentMainActivity"
            android:label="@string/title_activity_payment_main" >
        </activity>

        <service
            android:name="com.paypal.android.sdk.payments.PayPalService"
            android:exported="false" />

        <activity android:name="com.paypal.android.sdk.payments.PaymentActivity" />
        <activity android:name="com.paypal.android.sdk.payments.LoginActivity" />
        <activity android:name="com.paypal.android.sdk.payments.PaymentMethodActivity" />
        <activity android:name="com.paypal.android.sdk.payments.PaymentConfirmActivity" />
        <activity android:name="com.paypal.android.sdk.payments.PaymentCompletedActivity" />
        <activity android:name="com.paypal.android.sdk.payments.PayPalFuturePaymentActivity" />
        <activity android:name="com.paypal.android.sdk.payments.FuturePaymentConsentActivity" />
        <activity android:name="com.paypal.android.sdk.payments.FuturePaymentInfoActivity" />
        <activity android:name="com.paypal.android.sdk.payments.PayPalProfileSharingActivity" />
        <activity android:name="com.paypal.android.sdk.payments.ProfileSharingConsentActivity" />
        <activity
            android:name="io.card.payment.CardIOActivity"
            android:configChanges="keyboardHidden|orientation" />
        <activity android:name="io.card.payment.DataEntryActivity" />
        <activity
            android:name="com.infotop.eshop.payment.PayConfirmActivity"
            android:label="@string/title_activity_pay_confirm" >
        </activity>
        <activity
            android:name="com.infotop.eshop.login.ContactUsActivity"
            android:label="@string/title_activity_contact_us" >
        </activity>
        <activity
            android:name="com.infotop.eshop.login.EshopPoliciesActivity"
            android:label="@string/title_activity_eshop_policies" >
        </activity>
        <activity
          android:name="com.infotop.eshop.login.NoItemFoundActivity"
            android:label="@string/title_activity_no_item_found" >
        </activity>
        <activity
            android:name="com.infotop.eshop.category.SubListCategoryActivity"
            android:label="@string/title_activity_sub_list_category"
            android:parentActivityName="com.infotop.eshop.main.EshopMainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.infotop.eshop.main.EshopMainActivity" />
        </activity>
        <activity
            android:name="com.infotop.eshop.main.ZoomActivity"
            android:label="@string/title_activity_zoom" >
        </activity>
        <activity
            android:name="com.infotop.eshop.specification.SpecificationLaptopActivity"
            android:label="@string/title_activity_product_specification" >
        </activity>
        <activity
            android:name="com.infotop.eshop.specification.SpecificationClothActivity"
            android:label="@string/title_activity_specification_cloth" >
        </activity>
        <activity
            android:name="com.infotop.eshop.specification.SpecificationMobileActivity"
            android:label="@string/title_activity_specification_mobile" >
        </activity>
        <activity
            android:name="com.infotop.eshop.specification.SpecificationPendriveActivity"
            android:label="@string/title_activity_specification_pendrive" >
        </activity>
        <activity
            android:name="com.infotop.eshop.specification.SpecificationMouseActivityicationMouseActivity"
            android:label="@string/title_activity_specification_mouse" >
        </activity>
    </application>

</manifest>