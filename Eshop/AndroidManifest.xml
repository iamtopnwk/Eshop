        </activity>
        <activity
            android:name="com.infotop.eshop.activities.BookListMainActivity"
            android:label="@string/title_activity_book_list_main"
            android:parentActivityName=".activities.EshopMainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.infotop.eshop.activities.EshopMainActivity" />
        </activity>
    </application>

