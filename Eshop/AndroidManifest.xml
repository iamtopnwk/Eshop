                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.infotop.eshop.activities.BookListMainActivity" />
        </activity>
        <activity
            android:name=".activities.ClothsMainActivity"
            android:label="@string/title_activity_cloths_main"
            android:parentActivityName=".activities.EshopMainActivity" >
