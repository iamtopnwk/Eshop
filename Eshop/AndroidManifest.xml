<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.infotop.eshop"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >


        <activity
            android:name=".activities.EshopLoginActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activities.EshopMainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.RegisterActivity"
            android:label="@string/title_activity_register" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.infotop.eshop.EshopLoginActivity" />
        </activity>
        <activity
            android:name=".activities.BookDetailsActivity"
            android:label="@string/title_activity_product_details" >
        </activity>
        <activity
            android:name=".activities.ProductListViewActivity"
            android:label="@string/title_activity_product_list_view" >
        </activity>
        <activity
            android:name=".activities.ProductGridViewActivity"
            android:label="@string/title_activity_product_grid_view" >
        </activity>
        <activity
            android:name="com.infotop.eshop.activities.CartListMainActivity"
            android:label="@string/title_activity_cart_list_main" >
        </activity>
        <activity
            android:name="com.infotop.eshop.activities.WishListMainActivity"
            android:label="@string/title_activity_wish_list_main" >
        </activity>
    </application>

</manifest>